{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% form_theme form 'ArnmAraneumBundle:Form:araneum.html.twig' %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span><br/>
  		{{ 'strip.edit.info'|trans({}, 'media_content')|raw }}
	</div>
{% endblock %}

{% block title %}
	{{ parent() }} | {{ 'strip.form.title.edit'|trans({}, 'media_content') }}
{% endblock %}

{% block content %}
	<div class="page-header">
		<h2>{{ 'strip.form.title.edit'|trans({}, 'media_content') }}</h2>
	</div>
	
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	
	{% if form %}
		<form action="{{ path('arnm_media_content_strip_edit', { 'id': media.id }) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
			{{ form_widget(form) }}
			<div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
			    	<input class="btn btn-primary" type="submit" value="{{ 'strip.form.action.update'|trans({}, 'media_content') }}"/>
			    	<input class="btn" type="reset" value="{{ 'default.form.action.reset'|trans }}"/>
			    	<a  class="btn" href="{{ path('arnm_media_content_strip') }}">{{ 'default.form.action.back_to_list'|trans }}</a>
			    </div>
		    </div>
		</form>
	{% endif%}
{% endblock %}
